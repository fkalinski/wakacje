{
  "name": "holiday-park-monitor",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:local": "concurrently \"npm run api:dev\" \"npm run web:dev:local\"",
    "build": "turbo build",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:all": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-path .gitignore",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint:all && npm run build",
    "prepare": "node -e \"if (process.env.NODE_ENV !== 'production') { require('child_process').execSync('husky', {stdio: 'inherit'}); }\" || true",
    "api:dev": "npm run dev --workspace=@holiday-park/api",
    "web:dev": "npm run dev --workspace=@holiday-park/web",
    "web:dev:local": "npm run dev:local --workspace=@holiday-park/web",
    "api:build": "npm run build --workspace=@holiday-park/api",
    "web:build": "npm run build --workspace=@holiday-park/web"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "turbo": "^1.11.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
