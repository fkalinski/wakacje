# Server Configuration
PORT=8080
NODE_ENV=development

# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=europe-central2

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Service Account
SERVICE_ACCOUNT_EMAIL=holiday-park-api@your-project.iam.gserviceaccount.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=Holiday Park Monitor <noreply@example.com>

# Holiday Park API
HOLIDAY_PARK_API_URL=https://rezerwuj.holidaypark.pl

# Cloud Scheduler Configuration
SCHEDULER_TOKEN=generate-random-token-here
SCHEDULER_SERVICE_ACCOUNT=scheduler@your-project.iam.gserviceaccount.com

# JWT Configuration
JWT_SECRET=generate-strong-secret-key-here
JWT_ISSUER=holiday-park-api
JWT_AUDIENCE=holiday-park-client

# CORS Configuration
CORS_ORIGIN=https://your-app.vercel.app,https://your-domain.com

# Rate Limiting Configuration
RATE_LIMIT_DELAY_MIN=1000        # Minimum delay between requests in milliseconds (default: 1000ms)
RATE_LIMIT_DELAY_MAX=3000        # Maximum delay between requests in milliseconds (default: 3000ms)
RATE_LIMIT_JITTER=true           # Add randomness to delays to prevent synchronized bursts (default: true)
RATE_LIMIT_ADAPTIVE=false        # Adapt delays based on response times (default: false, experimental)

# Concurrency Control
MAX_CONCURRENT_SEARCHES=2        # Maximum number of searches running simultaneously (default: 2)
MAX_CONCURRENT_REQUESTS=1        # Maximum number of API requests in parallel (default: 1)

# Retry Configuration
RETRY_MAX_ATTEMPTS=3             # Maximum retry attempts on failure (default: 3)
RETRY_INITIAL_DELAY=2000         # Initial retry delay in milliseconds (default: 2000ms)
RETRY_MAX_DELAY=30000            # Maximum retry delay in milliseconds (default: 30000ms)